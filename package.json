{
  "name": "ozendate",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite --host",
    "format": "bunx @biomejs/biome format ./src --write",
    "build": "tsc && bunx vite build & bun build:menu && bun build.js",
    "push": "cp appsscript.json dist && clasp push && rm -rf dist/*",
    "build:menu": "tsc && bunx vite build --emptyOutDir --config vite.config.menu.ts && find dist_menu -type f -name '*.html' -exec mv {} dist/ \\; && rm -rf dist_menu",
    "preview": "vite preview",
    "preinstall": "npx only-allow bun; npx typesync || :",
    "prepare": "npx simple-git-hooks || :",
    "update": "bunx ncu -u"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.11",
    "@tanstack/react-query": "^5.81.5",
    "gas-client": "^1.2.1",
    "react": "^19.1.0",
    "react-dom": "^19.1.0",
    "react-error-boundary": "^6.0.0",
    "rollup": "^4.44.1",
    "stylelint-config-recommended": "^16.0.0",
    "tailwindcss": "^4.1.11"
  },
  "devDependencies": {
    "@biomejs/biome": "2.0.6",
    "@types/google-apps-script": "^1.0.99",
    "@types/lint-staged": "^13.3.0",
    "@types/react": "^19.1.8",
    "@types/react-dom": "^19.1.6",
    "@vitejs/plugin-react": "^4.6.0",
    "esbuild": "^0.25.5",
    "esbuild-gas-plugin": "^0.9.0",
    "jest": "^30.0.3",
    "lint-staged": "^16.1.2",
    "npm-check-updates": "^18.0.1",
    "simple-git-hooks": "^2.13.0",
    "typescript": "5.8.3",
    "vite": "^7.0.0",
    "vite-plugin-singlefile": "^2.2.0",
    "vite-tsconfig-paths": "^5.1.4"
  },
  "simple-git-hooks": {
    "pre-commit": ". ./lint-staged-each.sh"
  }
}
